generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Tipo {
  Professor
  Aluno
}

enum Status {
  Pendente
  Aprovada
  Recusada
}

model Usuario {
  id          String        @id @default(cuid())
  nome        String
  email       String        @unique
  senha       String
  tipo        Tipo
  Reserva     Reserva[]
  Solicitacao Solicitacao[]
}

model Sala {
  id          String        @id @default(cuid())
  nome        String
  capacidade  Int
  Reserva     Reserva[]
  Solicitacao Solicitacao[]
}

model Reserva {
  id            String   @id @default(cuid())
  usuarioId     String
  salaId        String
  horarioInicio String
  horarioFim    String
  data          DateTime @default(now())
  status        Status
  usuario       Usuario  @relation(fields: [usuarioId], references: [id])
  sala          Sala     @relation(fields: [salaId], references: [id])
}

model Solicitacao {
  id            String   @id @default(cuid())
  usuarioId     String
  salaId        String
  horarioInicio String
  horarioFim    String
  data          DateTime @default(now())
  status        Status
  motivo        String
  aprovadorId   String?
  usuario       Usuario  @relation(fields: [usuarioId], references: [id])
  sala          Sala     @relation(fields: [salaId], references: [id])
}
